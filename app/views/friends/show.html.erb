<style>
  .show-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 30px;
    border: 1px solid #e5e5e5;
    border-radius: 10px;
    background-color: #fff;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  .show-header {
    font-size: 32px;
    font-weight: 600;
    text-align: center;
    margin-bottom: 30px;
    color: #333;
  }

  .show-info {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 30px;
  }

  .show-info p {
    margin: 0;
    font-size: 18px;
    font-weight: 400;
    color: #555;
  }

  .show-info p strong {
    font-weight: 600;
    color: #333;
  }

  .action {
    display: flex;
    justify-content: flex-end;
    gap: 20px;
  }

  .action a {
    padding: 10px 20px;
    border: 1px solid #e5e5e5;
    border-radius: 5px;
    font-size: 16px;
    font-weight: 500;
    text-decoration: none;
    color: #333;
    transition: background-color 0.3s ease-in-out;
  }

  .action a:hover {
    background-color: #f5f5f5;
  }

  .action button {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: 500;
    background-color: #dc3545;
    color: #fff;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
  }

  .action button:hover {
    background-color: #c82333;
  }

  @media screen and (max-width: 768px) {
    .show-info {
      flex-direction: column;
      gap: 10px;
    }

    .show-info p {
      font-size: 16px;
    }

    .action {
      flex-direction: column;
      justify-content: center;
      gap: 10px;
    }

    .action a,
    .action button {
      width: 90%;
      text-align: center;
    }
  }
</style>

<div class="show-container">
  <div class="show-header">
    <%= @friend.first_name + ' ' + @friend.last_name %>
  </div>

  <div class="show-info">
    <p><strong>Phone:</strong> <%= @friend.phone %></p>
    <p><strong>Twitter:</strong> <%= @friend.twitter %></p>
    <p><strong>Instagram:</strong> <%= @friend.instagram %></p>
    <p><strong>Facebook:</strong> <%= @friend.facebook %></p>
    <p><strong>Snapchat:</strong> <%= @friend.snapchat %></p>
    <p><strong>Email:</strong> <%= @friend.emai %></p>
  </div>

  <div class="action">
    <%= link_to "Edit", edit_friend_path(@friend) %>
    <%= link_to "Back", friends_path %>
    <%= button_to "Destroy", @friend, method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
