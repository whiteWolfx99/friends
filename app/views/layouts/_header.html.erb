<div class="header">
  <div class="header_title">
    <h1><%= link_to 'Friends App', root_path %></h1>
  </div>
  <nav>
    <ul class="nav-links">
      <% if user_signed_in? %>
        <li><%= link_to 'Friends', friends_path %></li>
        <li><%= link_to "Profile", edit_user_registration_path %></li>
        <li><%= link_to "SignOut", destroy_user_session_path, 'data-turbo-method': :delete, class:"nav-link" %></li>
      <% else %>
        <li><%= link_to "SignIn", new_user_session_path %></li>
      <% end %>
    </ul>
  </nav>
</div>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    background-color: #f1f1f1;
  }

  .header_title {
    display: flex;
    align-items: center;
    gap: 20px;
  }
 
  .nav-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
  }

  .menu-button {
    display: none;
    border: none;
    font-size: 30px;
  }

  
   .header_title a {
     text-decoration: none;
     color: black;
   }

  .nav-links li {
    list-style: none;
  }

  .nav-links a {
    text-decoration: none;
    color: black;
    padding: 10px;
  }

  .nav-links a:hover {
    color: red;
  }

  /* Show nav links when screen is small */
  @media only screen and (max-width: 660px) {
    .header h1 {
      font-size: 20px;
    }

    .nav-links a {
    padding: 5px;
  }
  }

  @media only screen and (max-width: 360px) {
    .header {
      flex-direction: column;
      align-items: flex-start;
    }
  }

  @media only screen and (max-width: 290px) {
  .nav-links {
    display: hidden;
  }
 }
</style>